root = true

[*]
indent_style = space


[*.xml]
indent_size = 2


[*.cs]
indent_size = 4
tab_width = 4
end_of_line = lf
insert_final_newline = false

dotnet_separate_import_directive_groups = true
dotnet_sort_system_directives_first = true
file_header_template = unset
csharp_style_namespace_declarations = file_scoped

dotnet_diagnostic.CA1720.severity = none  # https://learn.microsoft.com/en-us/dotnet/fundamentals/code-analysis/quality-rules/ca1720


[*{Tests,Benchmarks}.cs]
dotnet_diagnostic.CA1305.severity = none  # https://learn.microsoft.com/en-us/dotnet/fundamentals/code-analysis/quality-rules/ca1305
dotnet_diagnostic.CA1707.severity = none  # https://learn.microsoft.com/en-us/dotnet/fundamentals/code-analysis/quality-rules/ca1707